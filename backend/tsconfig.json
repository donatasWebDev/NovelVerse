{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
    // NO "allowImportingTsExtensions": true here
    // NO "rewriteRelativeImportExtensions" needed
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}